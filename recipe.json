    "steps": [
        {
            "step": 1,
            "direction": "Boil cabbage in a stockpot until tender, 10 to 15 minutes. Drain well."
        },
        {
            "step": 2,
            "direction": "Heat a large skillet over medium-high heat. Cook and stir beef in the hot skillet until browned and crumbly, 5 to 7 minutes; drain and discard grease. Mix salt, parsley, onion powder, and black pepper into ground beef."
        },
        {
            "step": 3,
            "direction": "Bring water and rice to a boil in a saucepan. Reduce heat to medium-low, cover, and simmer until rice is tender and liquid has been absorbed, 20 to 25 minutes. Stir tomato soup and crushed tomatoes together in a bowl."
        },
        {
            "step": 4,
            "direction": "Preheat oven to 350 degrees F (175 degrees C)."
        },
        {
            "step": 5,
            "direction": "Combine cabbage, seasoned ground beef, rice, and tomato mixture together in a bowl; transfer to a 9x13-inch baking dish."
        },
        {
            "step": 6,
            "direction": "Bake in the preheated oven until bubbling, about 45 minutes."
        }
